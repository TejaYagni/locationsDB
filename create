DROP TABLE IF EXISTS z1789380.City;
DROP TABLE IF EXISTS z1789380.Region;
DROP TABLE IF EXISTS z1789380.Location;

DROP SCHEMA IF EXISTS z1789380;

CREATE SCHEMA z1789380;

CREATE TABLE z1789380.Location(Name VARCHAR, Location_ID SERIAL UNIQUE NOT NULL PRIMARY KEY, Latitude DOUBLE PRECISION, Longitude DOUBLE PRECISION, Data_ID VARCHAR UNIQUE NOT NULL);

CREATE TABLE z1789380.Region(Location_ID INTEGER UNIQUE NOT NULL PRIMARY KEY REFERENCES z1789380.Location, Type VARCHAR, fk_Location_id INTEGER REFERENCES z1789380.Region );

CREATE TABLE z1789380.City(Location_ID INTEGER UNIQUE NOT NULL PRIMARY KEY REFERENCES z1789380.Location, fk_Location_id INTEGER REFERENCES z1789380.Region );
